{
  "compilerOptions": {
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noEmit": true,
    "types": ["vite/client"],
    "resolveJsonModule": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "checkJs": true,
    "allowJs": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@ui": ["./ui/index.tsx"],
      "@ui/*": ["./ui/*"],
      "@data": ["./data/index.ts"],
      "@data/*": ["./data/*"],
      "@app/*": ["./app/*"],
      "@app": ["./app/index.tsx"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
